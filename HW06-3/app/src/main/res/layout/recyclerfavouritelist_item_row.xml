<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="London,UK"
        android:id="@+id/textViewLocation"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/textViewTemperature"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="100dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Updated on Date:"
        android:id="@+id/textViewDate"
        android:textSize="10dp"

        android:layout_below="@+id/textViewTemperature"
       android:layout_alignLeft="@id/textViewTemperature" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgFav"
        android:layout_toRightOf="@id/textViewDate"
        android:src="@drawable/star_gray"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@id/textViewDate" />



</RelativeLayout>