<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mohamed.hw06.MainActivity"
    android:id="@+id/relLayout">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMainActivityCity"
        android:hint="City (i.e.Charlotte)                                "
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editTextMainActivityCountry"
        android:layout_alignStart="@+id/editTextMainActivityCountry" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMainActivityCountry"
        android:layout_below="@+id/editTextMainActivityCity"
        android:layout_centerHorizontal="true"
        android:hint="Country (i.e.US)                                    " />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/buttonMainActivitySearch"
        android:layout_below="@+id/editTextMainActivityCountry"
        android:layout_alignLeft="@+id/editTextMainActivityCountry"
        android:layout_alignStart="@+id/editTextMainActivityCountry"
        android:layout_alignRight="@+id/editTextMainActivityCountry"
        android:layout_alignEnd="@+id/editTextMainActivityCountry" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="There are not cities to display. Search the city from the search box and save."
        android:id="@+id/textViewError"
        android:layout_below="@+id/buttonMainActivitySearch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp" />
</RelativeLayout>
