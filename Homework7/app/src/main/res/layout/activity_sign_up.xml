<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lakshminarayanabr.homework7.SignUpActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/editTextFirstName"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editTextLastname"
        android:hint="Firstname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/editTextLastname"
        android:layout_alignEnd="@+id/editTextLastname"
        android:layout_marginTop="35dp"
        android:id="@+id/editTextEmailAddress"
        android:hint="EmailAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:id="@+id/editTextLastname"
        android:layout_below="@+id/editTextFirstName"
        android:layout_centerHorizontal="true"
        android:hint="Lastname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="35dp"
        android:id="@+id/editTextpassword"
        android:layout_below="@+id/editTextEmailAddress"
        android:layout_alignStart="@+id/editTextEmailAddress"
        android:layout_marginStart="10dp"
        android:hint="Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/editTextpassword"
        android:layout_alignStart="@+id/editTextpassword"
        android:layout_marginTop="25dp"
        android:id="@+id/editTextRepeatPassword"
        android:hint="Repeat Password" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/editTextRepeatPassword"
        android:layout_alignStart="@+id/editTextRepeatPassword"
        android:layout_marginStart="66dp"
        android:layout_marginTop="12dp"
        android:id="@+id/imageView"
        android:adjustViewBounds="true" />

    <Button
        android:text="SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"
        android:id="@+id/buttonSignUp" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonSignUp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="31dp"
        android:id="@+id/buttonCancel" />

    <Switch
        android:text="M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignEnd="@+id/buttonCancel"
        android:id="@+id/switch2Gender" />

</RelativeLayout>
