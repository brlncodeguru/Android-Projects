<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.deepu.inclass2b.AreaActivityRadio">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stringlength_1"
        android:id="@+id/textviewLength1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stringlenght_2"
        android:id="@+id/textviewLength2"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textFieldLength1"
        android:layout_toLeftOf="@+id/textFieldLength1"
        android:layout_toStartOf="@+id/textFieldLength1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textFieldLength1"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/textviewLength1"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="35dp"
        android:hint="Enter Length"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textFieldLength2"
        android:layout_alignTop="@+id/textviewLength2"
        android:layout_alignLeft="@id/textFieldLength1"
        android:layout_centerHorizontal="true"
        android:hint="Enter Length"
        android:layout_marginLeft="28dp"

        android:layout_marginStart="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/areaString"
        android:id="@+id/textviewArea"
        android:layout_below="@+id/textFieldLength2"
        android:layout_alignLeft="@+id/textviewLength1"
        android:layout_alignStart="@+id/textviewLength1"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textviewAreavalue"
        android:layout_alignBottom="@+id/textviewArea"
        android:layout_alignLeft="@+id/textFieldLength1"
        android:layout_alignStart="@+id/textFieldLength1"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewArea"
        android:layout_alignLeft="@+id/textviewArea"
        android:layout_alignStart="@+id/textviewArea"
        android:layout_marginTop="50dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringTriangle"
            android:id="@+id/radioTriangle" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringSquare"
            android:id="@+id/radioSquare" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringCircle"
            android:id="@+id/radioCircle" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringRectangle"
            android:id="@+id/radioRectangle" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringClearall"
            android:id="@+id/radioClearall" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stringcalculate"
        android:id="@+id/btncalculate"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textviewLength2"
        android:layout_marginBottom="27dp" />


</RelativeLayout>
